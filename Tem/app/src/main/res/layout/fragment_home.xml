<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">
    <TextView
        android:id="@+id/my"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="127dp"
        android:text="나의"
        android:textSize="25sp"
        />
    <ImageView
        android:id="@+id/my_icon"
        app:layout_constraintTop_toTopOf="@id/my"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/user_icon"
        android:layout_marginRight="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 아이템 관리"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/rectangle_4"
        app:layout_constraintLeft_toLeftOf="@id/rectangle_4"
        android:layout_marginLeft="21dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/rectangle_4"
        android:layout_width="330dp"
        android:layout_height="463dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_rectangle"
        >
        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/item1"
            android:layout_width="136dp"
            android:layout_height="201dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/empty_item"
            />
        <View
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/item2"
            android:layout_width="136dp"
            android:layout_height="201dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/empty_item"
            />
        <View
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item4"
            android:layout_width="136dp"
            android:layout_height="201dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/empty_item"
            />
        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item3"
            android:layout_width="136dp"
            android:layout_height="201dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="13dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/empty_item"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/show_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/my"
        app:layout_constraintLeft_toRightOf="@id/my"
        app:layout_constraintBottom_toBottomOf="@id/my"
        android:src="@drawable/list_arrow"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/cur_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/my"
        app:layout_constraintLeft_toRightOf="@id/show_detail"
        android:layout_marginLeft="20dp"
        android:text="부엌"
        android:textSize="25sp"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/add"
        android:layout_width="17dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toTopOf="@id/rectangle_4"
        app:layout_constraintLeft_toLeftOf="@id/my_rv"
        app:layout_constraintRight_toRightOf="@id/my_rv"
        android:src="@drawable/add_item"/>
    <ListView
        android:visibility="gone"
        android:id="@+id/my_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cur_space"
        app:layout_constraintLeft_toLeftOf="@id/cur_space"
        app:layout_constraintRight_toLeftOf="@id/my_icon"
        app:layout_constraintBottom_toTopOf="@id/add"/>
        




</androidx.constraintlayout.widget.ConstraintLayout>