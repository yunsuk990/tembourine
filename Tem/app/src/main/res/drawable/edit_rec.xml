<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- 클릭 상태일 때 배경 색상 -->
            <corners android:radius="25dp" /> <!-- 모서리 둥글게 설정 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_color" /> <!-- 일반 상태일 때 배경 색상 -->
            <corners android:radius="25dp" /> <!-- 모서리 둥글게 설정 -->
        </shape>
    </item>
</selector>